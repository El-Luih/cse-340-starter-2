<h1 id="access-personnel-title"><%= title %> </h1>
<h2 class="title-flavor">Review the account information and change the user's access</h2>

<div class="flash-messages">
    <%- messages() %>
    <% if (errors) { %>
        <ul class="error">
        <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
        <%  }) %>
        </ul>
    <% } %>
</div>

<form id="access-personnel-form" class="submission-form" action="/account/personnel/access" method="post">
    <input type="hidden" name="account_id" id="account_id" value="<%= locals.account_id %>">
    <label>
        <span class="label-field-name">First Name:</span>
        <input 
            readonly
            type="text" 
            name="account_firstname" 
            id="account_firstname"
            required
            value="<%= locals.account_firstname %>">
    </label>
    <label>
        <span class="label-field-name">Last Name:</span>
        <input 
            readonly
            type="text" 
            name="account_lastname" 
            id="account_lastname"
            required
            value="<%= locals.account_lastname %>">
    </label>
    <label>
        <span class="label-field-name">Email:</span>
        <input 
            readonly
            type="email" 
            name="account_email"
            id="account_email"
            required
            value="<%= locals.account_email %>">
    </label>
    <%- typesList %>
    <button type="submit" class="button" id="submit-button">Change Access</button>
</form>
<h1 id="delete-inventory-title"><%= title %> </h1>
<h2 class="title-flavor">Confirm Deletion</h2>

<h3 class="delete-confirm-warning">THE DELETION IS PERMANENT</h3>

<div class="flash-messages">
    <%- messages() %>
    <% if (errors) { %>
        <ul class="error">
        <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
        <%  }) %>
        </ul>
    <% } %>
</div>

<form id="delete-inventory-form" class="submission-form" action="/inv/delete" method="post">
    <input type="hidden" name="inv_id" id="inv_id"
        <% if(locals.inv_id) { %> 
            value="<%= locals.inv_id %>"
        <% } %>>
    <label>
        <span class="label-field-name">Vehicle Maker:</span>
        <input 
            readonly
            type="text" 
            name="inv_make" 
            id="inv_make"
            required
            value="<%= locals.inv_make %>">
    </label>
    <label>
        <span class="label-field-name">Vehicle Model:</span>
        <input 
            readonly
            type="text" 
            name="inv_model" 
            id="inv_model"
            required
            value="<%= locals.inv_model %>">
    </label>
    <label>
        <span class="label-field-name">Model Year:</span>
        <input 
            readonly
            type="text" 
            name="inv_year"
            id="inv_year"
            pattern="\d{4}"
            required
            value="<%= locals.inv_year %>">
    </label>
    <label>
        <span class="label-field-name">Selling Price:</span>
        <input 
            readonly
            type="number" 
            name="inv_price"
            id="inv_price"
            min="0"
            required
            value="<%= locals.inv_price %>">
    </label>
    <button type="submit" class="button delete-button">DELETE</button>
</form>
